<UserControl x:Class="CounterStrike.Controls.BulletCountControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <WrapPanel>
            <Border BorderBrush="Gold" BorderThickness="2" CornerRadius="2">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Image Height="30" Width="25" Source="{Binding Photo}"/>

                        <TextBlock Height="27" VerticalAlignment="Center" Width="23" FontWeight="Medium" 
                                               Text="{Binding Instance.Count, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontSize="16" Foreground="Red" />
                    </StackPanel>
                </Grid>
            </Border>
        </WrapPanel>
    </Grid>

</UserControl>
