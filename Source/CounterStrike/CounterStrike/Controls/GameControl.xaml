<UserControl x:Class="CounterStrike.Controls.GameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:VM="clr-namespace:CounterStrike.ViewModel"
             xmlns:UIElements="clr-namespace:CounterStrike.UIElements">

    <UserControl.DataContext>
        <VM:GameControlViewModel></VM:GameControlViewModel>
    </UserControl.DataContext>

    <UserControl.InputBindings>
        <KeyBinding Command="{Binding MovePlayerOneUp}" Key="W"/>
        <KeyBinding Command="{Binding MovePlayerOneDown}" Key="S"/>
        <KeyBinding Command="{Binding MovePlayerOneRight}" Key="D"/>
        <KeyBinding Command="{Binding MovePlayerOneLeft}" Key="A"/>

        <KeyBinding Command="{Binding MovePlayerTwoUp}" Key="Up"/>
        <KeyBinding Command="{Binding MovePlayerTwoDown}" Key="Down"/>
        <KeyBinding Command="{Binding MovePlayerTwoRight}" Key="Right"/>
        <KeyBinding Command="{Binding MovePlayerTwoLeft}" Key="Left"/>
    </UserControl.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <UIElements:GameCanvas PlayerOne="{Binding Path=PlayerOne, UpdateSourceTrigger=PropertyChanged}" 
                               PlayerTwo="{Binding Path=PlayerTwo, UpdateSourceTrigger=PropertyChanged}"
                               Walls="{Binding Path=Map.WallItems, UpdateSourceTrigger=PropertyChanged}"
                               Background="{Binding Path=Map.BackgroundImage, UpdateSourceTrigger=PropertyChanged}">

            <!--<Button Canvas.Left="300" Canvas.Top="100" Command="{Binding Move}">
                asdasd
            </Button>-->
        </UIElements:GameCanvas>


        <!--============================== Player One ================================-->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" >

            <Canvas Width="60" Height="60"  Background="{Binding Path=PlayerOne.Color, UpdateSourceTrigger=Default}">
                <Canvas Width="50" Height="50" 
                   Background="{Binding Path=PlayerOne.Avatar, UpdateSourceTrigger=PropertyChanged}"/>
            </Canvas>
            
            <WrapPanel VerticalAlignment="Center" Margin="5,0,5,0">
                <Border BorderBrush="Gold" BorderThickness="2" CornerRadius="2">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <Image Height="30" Width="25" Source="{Binding Path=PlayerOne.PlayerBullet.Photo}"/>

                            <TextBlock Height="27" VerticalAlignment="Center" Width="23" FontWeight="Medium" 
                                       Text="{Binding Path=PlayerOne.PlayerBullet.Count, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                       FontSize="16" Foreground="Red" />
                        </StackPanel>
                    </Grid>
                </Border>
            </WrapPanel>

            <WrapPanel VerticalAlignment="Center" Margin="5,0,5,0">
                <Border Height="30" BorderBrush="Gold" BorderThickness="2" CornerRadius="2" VerticalAlignment="Center">
                    <TextBlock Margin="5,0,5,0" Text="{Binding Path=PlayerOne, UpdateSourceTrigger=PropertyChanged}" 
                       VerticalAlignment="Center" FontWeight="Medium" FontSize="16" Foreground="{Binding Path=PlayerOne.Color}"/>
                </Border>
            </WrapPanel>
        </StackPanel>

        <!--============================== Player Two ================================-->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <WrapPanel VerticalAlignment="Center" Margin="5,0,5,0" Visibility="{Binding Path=PlayerTwo.VisibilityControl}">
                <Border Height="30" BorderBrush="Gold" BorderThickness="2" CornerRadius="2" VerticalAlignment="Center">
                    <TextBlock Margin="5,0,5,0" Text="{Binding Path=PlayerTwo, UpdateSourceTrigger=PropertyChanged}" 
                       VerticalAlignment="Center" FontWeight="Medium" FontSize="16" Foreground="{Binding Path=PlayerTwo.Color}"/>
                </Border>
            </WrapPanel>


            <WrapPanel VerticalAlignment="Center" Margin="5,0,5,0" Visibility="{Binding Path=PlayerTwo.VisibilityControl}">
                <Border BorderBrush="Gold" BorderThickness="2" CornerRadius="2">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <Image Height="30" Width="25" Source="{Binding Path=PlayerTwo.PlayerBullet.Photo}"/>

                            <TextBlock Height="27" VerticalAlignment="Center" Width="23" FontWeight="Medium" 
                                       Text="{Binding Path=PlayerTwo.PlayerBullet.Count, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                       FontSize="16" Foreground="Red" />
                        </StackPanel>
                    </Grid>
                </Border>
            </WrapPanel>
            
            
            <Canvas Width="60" Height="60"  Background="{Binding Path=PlayerTwo.Color, UpdateSourceTrigger=PropertyChanged}">
                <Canvas Width="50" Height="50" 
                   Background="{Binding Path=PlayerTwo.Avatar, UpdateSourceTrigger=PropertyChanged}"/>
            </Canvas>
            
            

        </StackPanel>
    </Grid>
</UserControl>
